pkgname=vim-authorinfo
pkgver=1.5.1
pkgrel=1
pkgdesc="You can add your author info in any source files,such as cpp,c,java,and c#."
url="http://www.vim.org/scripts/script.php?script_id=2902"
arch=('any')
license=('unknown')
groups=('vim-plugins')
source=(authorinfo.vim)
build() {
    install -Dm644 ${srcdir}/authorinfo.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/authorinfo.vim
}
md5sums=('b82964970bde9792c9f65c9d21551f33')
